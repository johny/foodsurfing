%div.row
  %div.col-md-6
    %div.form-group
      = f.label :name, "Nazwa posiłku:"
      = f.text_field :name, autofocus: true, class: 'form-control' , placeholder: 'Nazwa dania'
      = f.error_message_on :name

    %div.form-group
      = f.label :description, "Opis:"
      = f.text_area :description, class: 'form-control', rows: 6, placeholder: 'Opisz  jakie jest Twoje danie'
      = f.error_message_on :description

    -#%div.form-group
      = f.label :ingredients, "Składniki:"
      = f.text_area :ingredients, class: 'form-control', placeholder: 'Opisz szczerze co wrzucasz w talerze.'
      = f.error_message_on :ingredients

  %div.col-md-6
    %div.form-group
      = f.label :served_at, "Na kiedy:"
      = f.datetime_local_field :served_at, class: 'form-control' ,placeholder: 'Gdzie dom Twoj tam żarcie Twoje'
      = f.error_message_on :served_at
      %span.help-block Kiedy posiłek będzie serwowany


    -#%div.form-group
      = f.label :cuttoff_time, "Najpóźniej do:"
      = f.datetime_local_field :cutoff_time, class: 'form-control',  placeholder: 'Rezerwuj najpóźniej do '
      %span.help-block Najpóźniejszy dopuszczalny termin rezerwacji
      = f.error_message_on :cutoff_time

    %div.row
      %div.col-md-6
        %div.form-group
          = f.label :portions, "Ile porcji przygotujesz"
          = f.select :portions, 1..10, {}, class: 'form-control' , placeholder: 'Ile porcji'
          = f.error_message_on :portions

      %div.col-md-6
        %div.form-group
          = f.label :price_per_portion, "Cena za jedną porcję"
          %div.input-group
            = f.number_field :price_per_portion, in: 1.0..20.0, step: 0.01, class: 'form-control', placeholder: 'Wpisz cenę za porcję'
            %div.input-group-addon PLN          
          = f.error_message_on :price_per_portion


    %div.form-group
      = f.label :picture, "Zdjęcie"
      = f.file_field :picture, class: 'form-control'
      = f.error_message_on :picture
