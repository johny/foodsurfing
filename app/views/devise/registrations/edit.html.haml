%div.page-content
  %h1 Edycja konta
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f|
    = devise_error_messages!
    %div.row
      %div.col-lg-6

        %div.form-group
          = f.label :email, "Adres email"
          = f.email_field :email, autocomplete: :off, class: 'form-control'

        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          %div
            Currently waiting confirmation for:
            = resource.unconfirmed_email

        %div.form-group
          = f.label :password, "Hasło"
          = f.password_field :password, class: 'form-control'
          %span.help-block leave blank if you don't want to change it

        %div.form-group
          = f.label :password_confirmation, "Powtórz hasło"
          = f.password_field :password_confirmation, class: 'form-control'

        %div.form-group
          = f.label :current_password, "Aktualne hasło"
          = f.password_field :current_password, class: 'form-control', autocomplete: "off"
          %span.help-block
            we need your current password to confirm your changes

        = f.submit 'Aktualizuj', class: 'btn btn-primary'




      -# TODO: need place for this
        = button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete
